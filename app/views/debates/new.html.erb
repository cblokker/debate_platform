<%= form_for :debate, url: debates_path do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.text_field :title, placeholder: "Title" %><br>
  <%= f.text_area :body, placeholder: "Body" %><br>
  <% options = options_from_collection_for_select(@topic, 'id', 'name') %>
  <%= f.select :topic_id,  options %>
  <%= f.submit "Submit" %>
<% end %>
